#!/bin/sh
basedir=`dirname "$0"`

case `uname` in
    *CYGWIN*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -x "$basedir/node" ]; then
  "$basedir/node"  "$basedir/../js-prettify/js/bin/html-beautify.js" "$@"
  ret=$?
else 
  node  "$basedir/../js-prettify/js/bin/html-beautify.js" "$@"
  ret=$?
fi
exit $ret
